{
  "manifest_version": 3,
  "name": "Life OS",
  "version": "2.0.0",
  "description": "Gamified productivity tracker with daily missions, momentum tracking, and mission history",
  "permissions": ["storage", "alarms"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Life OS",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      }
    }
  }
}
